client

dev tun

proto udp

remote {{ hostvars[inventory_hostname]['ansible_default_ipv4']['address'] }} 1194

resolv-retry infinite

nobind

user nobody
group nogroup

persist-key
persist-tun

cipher AES-128-CBC
auth SHA256

key-direction 1

script-security 2
up /etc/openvpn/update-resolv-conf
down /etc/openvpn/update-resolv-conf

remote-cert-tls server

comp-lzo

verb 3

<ca>
{{srv_ca.stdout}}
</ca>
<tls-auth>
{{ta_key.stdout}}
</tls-auth>

